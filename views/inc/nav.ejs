            src="<%= req.session.userLogin.image %>"
                <% }else{ %>
                    
         src="/images/logo_app.png"
        <% } %>
            width="50px"
            height="70px"
            alt="User Image">
        <div>
            <p class="app-sidebar__user-name"><b>
                  
                        <%= req.session.userLogin.name %>
