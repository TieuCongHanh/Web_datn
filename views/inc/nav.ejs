<!-- Navbar-->
<header class="app-header">
    <!-- Sidebar toggle button-->
    <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
    <!-- Navbar Right Menu-->
    <ul class="app-nav">
        <!-- User Menu-->
        <li>
            <a href="/user/1/setting">
                <button class="app-nav__item" type="button"
                style="margin: 0; padding: 8px;" title="Cài đặt">
                <i class='bx bx-cog'></i>
            </button>
            </a>
        </li>
        <li>
            <button class="app-nav__item" type="button" data-bs-toggle="modal" data-bs-target="#logoutModal"
                style="margin: 0; padding: 8px;" title="Đăng Xuất!">
                <i class='bx bx-log-out bx-rotate-180'></i>
            </button>
        </li>
    </ul>
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="color: black;">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận</h5>
                    <button type="button"  data-bs-dismiss="modal" ><i class="fa fa-times" aria-hidden="true"></i></button>
                </div>
                <form action="/home/logout" method="POST" id="formDelete">
                    <input type="hidden">
                        <div class="modal-body">
                            Bạn có chắc muốn đăng xuất?
                        </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">Ok</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</header>
<!-- Sidebar menu-->
<div class="app-sidebar__overlay" data-toggle="sidebar"></div>
<!-- thanh slide menu bên trái -->
<aside class="app-sidebar">
    <div class="app-sidebar__user"><img class="app-sidebar__user-avatar"
