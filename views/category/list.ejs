<body onload="time()" class="app sidebar-mini rtl">
    <%- include('../inc/nav.ejs') %>
    <main class="app-content">
        <div class="app-title">
            <ul class="app-breadcrumb breadcrumb side">
                <li class="breadcrumb-item active"><a href="#"><b>Danh sách thể loại</b></a></li>
            </ul>
           
            <div id="clock"></div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="tile">
                    <div class="tile-body">
                        <!-- thanh chức năng đầu tiên -->
                        <div class="row element-button">
                            <div class="col-sm-2">
                             
                                <button class="btn btn-add btn-sm" data-bs-toggle="modal"data-bs-target="#addModal" title="Thêm" id="show-emp"><i
                                        class="fas fa-plus"></i>
                                    Thêm thể loại</button> 
                            </div>
                            <div class="col-sm-2" id="btnExport">
                                <a class="btn btn-excel btn-sm" href="/category/countPage/in"  title="In"><i class="fas fa-file-excel"></i>
                                    Xuất Excel</a>
                            </div>
                            <div class="col-sm-2">
                                <a class="btn btn-delete btn-sm print-file" href="/category/countPage/print"  type="button" title="In"
                                    ><i class="fas fa-print"></i> In dữ liệu</a>
                            </div>
                        </div>
                        <!-- thanh tìm kiếm -->
                        <div class="d-flex justify-content-between" style="margin-top: 20px; margin-bottom: 30px;">
                            <div class="dataTables_length d-flex align-items-center">
                                <label class="mr-2" style="vertical-align: middle; text-align: center; margin-bottom: 0px;">Xem</label>
                                <select name="data_tables_leght" style="width: 60px;" aria-controls="DataTables_Table_0" class="custom-select custom-select-sm form-control form-control-sm" onchange="changePerPage(this)">
                                    <option value="5" <%= perPage === 5 ? 'selected' : '' %>>5</option>
                                    <option value="10" <%= perPage === 10 ? 'selected' : '' %>>10</option>
                                    <option value="25" <%= perPage === 25 ? 'selected' : '' %>>25</option>
                                    <option value="50" <%= perPage === 50 ? 'selected' : '' %>>50</option>
                                    <option value="100" <%= perPage === 100 ? 'selected' : '' %>>100</option>
                                </select>
                                <label class="ml-2" style="vertical-align: middle; text-align: center; margin-bottom: 0px">mục</label>
                            </div>
                            <form role="search" class="d-flex" style="margin-left: auto;">
                                <input class="form-control col-6 col-sm-6 col-md-9" type="search" placeholder="Tìm kiếm..." aria-label="Search" name="categorySearch" value="<%= req.query.categorySearch || '' %>">
                                <button class="btn btn-outline-info" style="margin: 0px;" type="submit"><i style="height: 20px; padding-top: 6px; " class=' bx bx-search-alt-2'></i></button>
                            </form>
                        </div>

                        <table class="table table-bordered col" id="tableorder">
                            <thead style="width: auto;">
                                <tr>
                                  <th scope="col" style="vertical-align: middle; text-align: center; width: 10% ; padding: 7px;">
                                    <a class="d-flex" href="<%= req.params.i %>?by=_id&order=<%= (by === '_id' && order === 'asc') ? 'desc' : 'asc' %>">
                                      <div class="th-link">
                                        Mã
                                      </div>
                                    </a>
                                  </th>
                                  <th scope="col" style="vertical-align: middle; text-align: center; width: 15%; padding: 7px;">
                                    <a class="d-flex" href="<%= req.params.i %>?by=name&order=<%= (by === 'name' && order === 'asc') ? 'desc' : 'asc' %>">
                                      <div class="th-link">
                                        Tên thể loại
                                      </div>
                                    </a>
                                  </th>
                                  <th scope="col" style="vertical-align: middle; text-align: center; width: 25%; padding: 7px;">Mô tả sản phẩm</th>
                                  <th scope="col" style="vertical-align: middle; text-align: center; width: 20%; padding: 7px;">Chức năng</th>
                                </tr>
                              </thead>
                            <tbody>
                                <% listL.forEach((sanpham)=> { %>
                                    <tr>
                                    <tr>
                                        <td style="text-align: center; vertical-align: middle; padding: 7px;">
                                            <%= sanpham._id %>
                                        </td>
                                        <td style="vertical-align: middle; text-align: center; padding: 7px;">
                                            
                                            <%= sanpham.name%>
                                        </td>
                                        <td style="vertical-align: middle; text-align: center; padding: 7px;">
                                            
                                            <%= sanpham.describe%>
                                        </td>
                                        <td style="vertical-align: middle; text-align: center; width: 150px; padding: 7px;">             
                                            <button class="btn bg-warning-subtle btn-sm edit" style="font-size: 12px;" type="button" title="Sửa" id="show-emp" data-category-id="<%= sanpham._id %>">
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#editModal">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </button>

                                            <button class="btn bg-warning-subtle btn-sm" style="font-size: 12px;" title="Xóa" type="button" data-bs-toggle="modal"data-bs-target="#deleteModal" data-user-id="<%= sanpham._id %>">
                                                 <i class="fas fa-trash-alt text-danger" style="font-size: 12px;"></i>
                                            </button>

                                        </td>
                                    </tr>
                                    </tr>
                                    <% }); %>


                            </tbody>
                        </table>
                        <!-- hết bảng -->
                        <div class="row justify-content-between" style="vertical-align: middle; align-items: center">
                            <div class="col-auto">
                              Bạn đang xem <%=(listL.length == 0) ? start : start + 1 %> đến <%= start + listL.length %> trong tổng số <%= totalSP %> thể loại
                            </div>
                            <div class="col-auto">
                              <nav aria-label="Page navigation">
                                <ul class="pagination justify-content-end">
                                  <% for (let i = 1; i <= countPage; i++) { %>
                                    <li class="page-item<%= (i == req.params.i) ? ' active' : '' %>">
                                      <a class="page-link" href="/category/<%= i %>"><%= i %></a>
                                    </li>
                                  <% } %>
                                </ul>
                              </nav>
                            </div>
                        </div>
                        
                        <!-- hết  thông tin thông số của trang -->
                    </div>
                </div>
            </div>
        </div>
      
    </main>

    <!-- form xoá -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="color: black;">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận</h5>
                    <button type="button"  data-bs-dismiss="modal" ><i class="fa fa-times" aria-hidden="true"></i></button>
                </div>
                <form action="/category/delete" method="POST" id="formDelete">
                    <input type="hidden" name="IdDelete" id="IdDelete">
                        <div class="modal-body">
                            Bạn có chắc muốn xóa loại này không?
                        </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger" id="confirmDeleteBtn">Ok</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- // Thêm thể loại -->
    <div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="color: black;">
                    <h5 class="modal-title" id="confirmDeleteModalLabel">Thêm thể loại</h5>
                    <button type="button" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button>
                </div>
                <form action="/category/add" method="POST" id="formAdd">
                    <div class="row" style="margin: 10px;">
                        <div class="form-group col-md-12">
                            <label class="control-label">Tên thể loại</label>
                            <input class="form-control" type="text" name="name" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="control-label">Mô tả sản phẩm</label>
                            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" name="describe"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger" id="confirmAddBtn">Ok</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- // Sửa -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header" style="color: black;">
                    <h5 class="modal-title" id="editModalLabel">Cập nhật thể loại</h5>
                    <button type="button" data-bs-dismiss="modal"><i class="fa fa-times" aria-hidden="true"></i></button>
                </div>
                <form action="/category/edit" method="POST" id="formEdit">
                    <input type="hidden" name="categoryId" id="categoryId">
                    <div class="row" style="margin: 10px;">
                        <div class="form-group col-md-12">
                            <label class="control-label">Mã thể loại</label>
                            <input  type="text" name="id_update" id="id_update" disabled>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="control-label">Tên thể loại</label>
                            <input class="form-control" type="text" name="nameUpdate" id="editName" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label class="control-label">Mô tả sản phẩm</label>
                            <textarea class="form-control" id="editDescribe" rows="3" name="describeUpdate"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                        <button type="submit" class="btn btn-danger" id="confirmEditBtn">Lưu</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

   

